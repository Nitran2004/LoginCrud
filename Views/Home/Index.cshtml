@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<SecureAssetManager.Models.Asset>

<h2>Lista de Objetivos</h2>
<table id="assetTable" class="table table-striped table-bordered">

    <thead>
        <tr>
            <th>Codigo</th>
            <th>Persona encargada</th>
            <th>Nivel de Importancia</th>
            <th>Alineamiento y objetivos de gobierno Sigla AG01-AG13</th>
            <th>Alineamiento y objetivos de gobierno Sigla (EDM01-EDM05)(APO01-APO14)(BAI01-BAI11)(DSS01-DSS06)(MEA01-MEA04)</th>


            @*<th>NombreArtistico</th>
            <th>FechaNacimiento</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var asset in Model)
        {
            <tr>
                <td>@asset.CodigoActivo</td>
                <td>@asset.Nombre</td>
                <td>@asset.Tipo</td>
                <td>@asset.Categoria</td>
                <td>@asset.Ubicacion</td>
                @*<td>@asset.Responsable</td>
                <td>@asset.Descripcion</td>*@


                <td>
                    <a href="@Url.Action("Edit", "Asset", new { id = asset.ID })">Editar</a>
                    <a href="@Url.Action("Delete", "Asset", new { id = asset.ID })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts {
    <link href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#assetTable').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                }
            });
        });
    </script>
}
