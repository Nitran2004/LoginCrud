@model SecureAssetManager.Models.Asset

@{
    ViewData["Title"] = "Agregar Relacionamiento de metas  de alineamiento y objetivos de gobierno y gestión";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoActivo" class="control-label"></label>
                <input asp-for="CodigoActivo" class="form-control" />
                <span asp-validation-for="CodigoActivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control">
                    <option value="">-- Seleccione --</option>
                    <option value="Primario">Primario</option>
                    <option value="Secundario">Secundario</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-control">
                    <option value="">-- Seleccione una opción --</option>
                    <option value="AG01 - Cumplimiento y soporte de I&T para el cumplimiento del negocio con leyes y regulaciones externas">AG01 - Cumplimiento y soporte de I&T para el cumplimiento del negocio con leyes y regulaciones externas</option>
                    <option value="AG02 - Gestión de riesgo relacionado con I&T">AG02 - Gestión de riesgo relacionado con I&T</option>
                    <option value="AG03 - Beneficios obtenidos del portafolio de inversiones y servicios habilitados por I&T">AG03 - Beneficios obtenidos del portafolio de inversiones y servicios habilitados por I&T</option>
                    <option value="AG04 - Calidad de la información financiera relacionada con la tecnología">AG04 - Calidad de la información financiera relacionada con la tecnología</option>
                    <option value="AG05 - Prestación de servicios I&T conforme a los requisitos del negocio">AG05 - Prestación de servicios I&T conforme a los requisitos del negocio</option>
                    <option value="AG06 - Agilidad para convertir los requisitos del negocio en soluciones operativas">AG06 - Agilidad para convertir los requisitos del negocio en soluciones operativas</option>
                    <option value="AG07 - Seguridad de la información, infraestructura de procesamiento y aplicaciones, y privacidad">AG07 - Seguridad de la información, infraestructura de procesamiento y aplicaciones, y privacidad</option>
                    <option value="AG08 - Habilitar y dar soporte a procesos de negocio mediante la integración de aplicaciones y tecnología">AG08 - Habilitar y dar soporte a procesos de negocio mediante la integración de aplicaciones y tecnología</option>
                    <option value="AG09 - Ejecución de programas dentro del plazo, sin exceder el presupuesto, y que cumplen con los requisitos y estándares de calidad">AG09 - Ejecución de programas dentro del plazo, sin exceder el presupuesto, y que cumplen con los requisitos y estándares de calidad</option>
                    <option value="AG10 - Calidad de la información sobre gestión de I&T">AG10 - Calidad de la información sobre gestión de I&T</option>
                    <option value="AG11 - Cumplimiento de I&T con las políticas internas">AG11 - Cumplimiento de I&T con las políticas internas</option>
                    <option value="AG12 - Personal competente y motivado con un entendimiento de la tecnología y del negocio">AG12 - Personal competente y motivado con un entendimiento de la tecnología y del negocio</option>
                    <option value="AG13 - Conocimiento, experiencia e iniciativas para la innovación empresarial">AG13 - Conocimiento, experiencia e iniciativas para la innovación empresarial</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>


<div class="form-group">
    <label asp-for="Ubicacion"></label>
    <select asp-for="Ubicacion" class="form-control">
        <option value="">-- Seleccione una opción --</option>
        <option value="EDM01 - Evaluar, dirigir y supervisar (EDM)">EDM01 - Evaluar, dirigir y supervisar (EDM)</option>
        <option value="EDM02 - Asegurar la definición de un marco de gobierno de TI">EDM02 - Asegurar la definición de un marco de gobierno de TI</option>
        <option value="EDM03 - Asegurar la entrega de beneficios">EDM03 - Asegurar la entrega de beneficios</option>
        <option value="EDM04 - Asegurar la optimización de riesgos">EDM04 - Asegurar la optimización de riesgos</option>
        <option value="EDM05 - Asegurar la optimización de recursos">EDM05 - Asegurar la optimización de recursos</option>
        <option value="APO01 - Gestionar el marco de gestión de TI">APO01 - Gestionar el marco de gestión de TI</option>
        <option value="APO02 - Gestionar la estrategia">APO02 - Gestionar la estrategia</option>
        <option value="APO03 - Gestionar la arquitectura empresarial">APO03 - Gestionar la arquitectura empresarial</option>
        <option value="APO04 - Gestionar la innovación">APO04 - Gestionar la innovación</option>
        <option value="APO05 - Gestionar el portafolio">APO05 - Gestionar el portafolio</option>
        <option value="APO06 - Gestionar el presupuesto y los costos">APO06 - Gestionar el presupuesto y los costos</option>
        <option value="APO07 - Gestionar los recursos humanos">APO07 - Gestionar los recursos humanos</option>
        <option value="APO08 - Gestionar las relaciones con los clientes">APO08 - Gestionar las relaciones con los clientes</option>
        <option value="APO09 - Gestionar los acuerdos de servicio">APO09 - Gestionar los acuerdos de servicio</option>
        <option value="APO010 - Gestionar los proveedores">APO010 - Gestionar los proveedores</option>
        <option value="APO011 - Gestionar la calidad">APO011 - Gestionar la calidad</option>
        <option value="APO012 - Gestionar el cumplimiento">APO012 - Gestionar el cumplimiento</option>
        <option value="APO013 - Gestionar la seguridad y la continuidad">APO013 - Gestionar la seguridad y la continuidad</option>
        <option value="APO014 - Gestionar los riesgos">APO014 - Gestionar los riesgos</option>
        <option value="BAI01 - Gestionar los programas y proyectos">BAI01 - Gestionar los programas y proyectos</option>
        <option value="BAI02 - Gestionar la definición y el diseño de soluciones">BAI02 - Gestionar la definición y el diseño de soluciones</option>
        <option value="BAI03 - Gestionar la disponibilidad y la capacidad">BAI03 - Gestionar la disponibilidad y la capacidad</option>
        <option value="BAI04 - Gestionar la seguridad de la información">BAI04 - Gestionar la seguridad de la información</option>
        <option value="BAI05 - Gestionar los proveedores de servicios">BAI05 - Gestionar los proveedores de servicios</option>
        <option value="BAI06 - Gestionar los acuerdos de nivel de servicio y los contratos">BAI06 - Gestionar los acuerdos de nivel de servicio y los contratos</option>
        <option value="BAI07 - Gestionar la calidad de la solución y la validación">BAI07 - Gestionar la calidad de la solución y la validación</option>
        <option value="BAI08 - Gestionar los cambios organizacionales">BAI08 - Gestionar los cambios organizacionales</option>
        <option value="BAI09 - Gestionar la capacitación y la concienciación">BAI09 - Gestionar la capacitación y la concienciación</option>
        <option value="BAI10 - Gestionar la adquisición y el mantenimiento">BAI10 - Gestionar la adquisición y el mantenimiento</option>
        <option value="BAI11 - Gestionar la entrega y soporte">BAI11 - Gestionar la entrega y soporte</option>
        <option value="DSS01 - Gestionar la operación de servicio">DSS01 - Gestionar la operación de servicio</option>
        <option value="DSS02 - Gestionar las peticiones de servicio y soporte">DSS02 - Gestionar las peticiones de servicio y soporte</option>
        <option value="DSS03 - Gestionar los incidentes y problemas">DSS03 - Gestionar los incidentes y problemas</option>
        <option value="DSS04 - Gestionar los datos">DSS04 - Gestionar los datos</option>
        <option value="DSS05 - Gestionar la seguridad">DSS05 - Gestionar la seguridad</option>
        <option value="DSS06 - Gestionar los cambios">DSS06 - Gestionar los cambios</option>
        <option value="MEA01 - Monitorear, evaluar y valorar el desempeño y el cumplimiento">MEA01 - Monitorear, evaluar y valorar el desempeño y el cumplimiento</option>
        <option value="MEA02 - Monitorear, evaluar y valorar el cumplimiento">MEA02 - Monitorear, evaluar y valorar el cumplimiento</option>
        <option value="MEA03 - Asegurar el cumplimiento de políticas y estándares">MEA03 - Asegurar el cumplimiento de políticas y estándares</option>
        <option value="MEA04 - Proveer gobierno de TI">MEA04 - Proveer gobierno de TI</option>
    </select>
    <span asp-validation-for="Ubicacion" class="text-danger"></span>
</div>




            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Regresar a la lista</a>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
