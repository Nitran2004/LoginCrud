@model SecureAssetManager.Models.Asset

@{
    ViewData["Title"] = "Eliminar Activo";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Está seguro que desea eliminar este activo?</h3>
<div>
    <h4>Detalles del Activo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CodigoActivo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodigoActivo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Responsable)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Responsable)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>



    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodigoActivo" />

        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Cancelar</a>
        </div>
    </form>
</div>
